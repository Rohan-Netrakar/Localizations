<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Indoor Localization</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 30px;
    }

    h1 {
      text-align: center;
      color: #222;
    }

    .container {
      max-width: 600px;
      margin: auto;
      background: #fff;
      padding: 25px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    input, button {
      width: 100%;
      padding: 10px;
      margin-top: 12px;
      font-size: 16px;
    }

    button {
      background: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 4px;
    }

    button:hover {
      background: #0056b3;
    }

    .result {
      margin-top: 15px;
      padding: 10px;
      background: #eef;
      border-radius: 4px;
      font-size: 14px;
    }

    table {
      width: 100%;
      margin-top: 25px;
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: center;
    }

    th {
      background: #eee;
    }
  </style>
</head>
<body>

  <h1>Indoor Localization Engine</h1>

  <div class="container">
    <h3>Update User BSSID</h3>

    <input type="text" id="userId" placeholder="User ID" />
    <input type="text" id="bssid" placeholder="Wi-Fi BSSID" />

    <button onclick="updateBSSID()">Update BSSID</button>

    <div id="result" class="result"></div>

    <h3>Registered Users</h3>

    <table>
      <thead>
        <tr>
          <th>User ID</th>
          <th>BSSID</th>
        </tr>
      </thead>
      <tbody id="usersTable"></tbody>
    </table>
  </div>

  <script>
    async function updateBSSID() {
      const userId = document.getElementById("userId").value;
      const bssid = document.getElementById("bssid").value;
      const result = document.getElementById("result");

      if (!userId || !bssid) {
        result.innerHTML = "❌ User ID and BSSID are required";
        return;
      }

      const res = await fetch("/update-bssid", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ userId, bssid })
      });

      const data = await res.json();

      result.innerHTML = data.success
        ? "✅ BSSID updated successfully"
        : "❌ Error updating BSSID";

      loadUsers();
    }

    async function loadUsers() {
      const res = await fetch("/users");
      const users = await res.json();

      const table = document.getElementById("usersTable");
      table.innerHTML = "";

      for (const id in users) {
        table.innerHTML += `
          <tr>
            <td>${id}</td>
            <td>${users[id].bssid}</td>
          </tr>
        `;
      }
    }

    // Load users on page load
    loadUsers();
  </script>

</body>
</html>
